@{
    ViewData["Title"] = "PrimaryEducation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


<script src="~/angularjs/aboutus/primary.js"></script>

<div ng-app="app">
    <div ng-controller="PrimaryController">
        <div ng-init="OnLoad()">
            <div>
                <h4 class="fa-2x mt-5 ms-5 position-absolute MainTextColor">PRIMARY ACADEMICS</h4>
                <a href="#" ng-dblclick="ChangeImage('ShowImage')"><img src="{{MainImage}}" class="img" /></a>
                <div class="text-center">
                    <div class="gallery-uploader-wrap" ng-show="ShowImage" width="5" height="5" id="ShowImage">
                        <label class="uploader-img1">
                            <input type="file" multiple="multiple" name="multiple" hidden="hidden" id="multipleShowImage" ng-model="MissionImage1" ng-change="ShowNewImage(this);">
                            <svg xmlns="savedimages" fill="#999" width="32" height="32" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="3"></circle>
                                <path d="M16.83 4L15 2H9L7.17 4H2v16h20V4h-5.17zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5z"></path>
                            </svg>
                        </label>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row bg-light">
                    <p class="text-center fw-bold lh-lg" id="PrimaryHeading1" ng-dblclick="ChangeData('PrimaryHeading1')">{{PrimaryHeading}} </p>
                    <p class="lh-lg fontcolrwhite p-2" id="PrimaryHeadingText1" ng-dblclick="ChangeData('PrimaryHeadingText1')">
                        {{PrimaryHeadingText}}
                    </p>
                </div>
                <div class="row mt-5" ng-repeat="Primary in PrimaryData">
                    <div class="col-lg-6 col-md-6 col-sm-12 bg-light">
                        <h1 id="DataId" hidden="hidden" class="fw-bold">{{Primary.id}}</h1>
                        <h5 class="lh-lg ms-5 fw-bold">MAIN ASPECTS OF PRIMARY EDUCATION</h5>
                        <p class="MainText fontcolrwhite lh-lg p-3" id="PrimaryText1" ng-dblclick="ChangeData('PrimaryText1')">{{Primary.text}}</p>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">

                        <div class="ms-5">
                            <a href="#" ng-dblclick="ChangeImage('PrimaryImage')"><img src="{{Primary.primaryImage}}" class="mt-4" style="width: -webkit-fill-available;" /></a>
                            <div class="text-center">
                                <div class="gallery-uploader-wrap" ng-show="PrimaryImage" width="5" height="5" id="PrimaryImage">
                                    <label class="uploader-img1">
                                        <input type="file" multiple="multiple" name="multiple" hidden="hidden" id="multipleprimaryimage" ng-model="MissionImage1" ng-change="ShowNewImage(this);">
                                        <svg xmlns="savedimages" fill="#999" width="32" height="32" viewBox="0 0 24 24">
                                            <circle cx="12" cy="12" r="3"></circle>
                                            <path d="M16.83 4L15 2H9L7.17 4H2v16h20V4h-5.17zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5z"></path>
                                        </svg>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-5 mb-4">
                    <div class="col-lg-4 col-md-6 col-sm-12"></div>
                    <div class="col-lg-4 col-md-6 col-sm-12"></div>
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <button class="btn btn-outline-success float-end" id="UpdatePrimary" ng-show="ShowUpdateButton" ng-click="UpdatePrimaryEducation()">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .img {
        height: 500px;
        width: 100%;
        margin-bottom: 3%;
    }

    .fontcolrwhite {
        color: black;
        font-family: system-ui;
        text-align: justify;
    }

    .MainTextColor {
        color: white;
        font-weight: bold;
    }
</style>
<style>
    .uploader-img1 {
        position: relative;
        display: inline-flex;
        width: 50px;
        height: 50px;
        margin-right: 5px;
        margin-bottom: 5px;
        vertical-align: middle;
        text-align: center;
        justify-content: center;
        align-items: center;
        border-radius: 0.35rem;
        border: 1px dashed #ccd1d6;
        overflow: hidden;
        background-color: #f8f9fa;
    }
</style>