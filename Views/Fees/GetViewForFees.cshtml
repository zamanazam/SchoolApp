@{
    ViewData["Title"] = "FeesPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
<div class="container-fluid bg-light">
    <div class="row"><h3 class="text-center mb-5 text-dark text-decoration-underline mt-5" style="font-weight: bold;">Fees Forum</h3></div>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="text-dark">Role No:</label>
            <input type="text" placeholder="Role No" onchange="SearchData()" id="RoleNo" class="RollNoInput form-control" />
            <div class="d-flex mt-4">
                <input type="checkbox" onchange="SearchData()" class="Paid form-check mt-4" />
                <label class="ms-3 text-dark mt-4">Paid</label>
            </div>
        </div>

        <div class="col-lg-4 col-md-16 col-sm-12">
            <label class="text-dark">Class :</label>
            <select class="form-select" id="ClassIds" onchange="GetSectionNames();"></select>
            <div>
                <label class="mt-4 text-dark" id="LabelSectionName">Section Name :</label>
                <form id="SectionName" class="d-flex bg-white rounded-2" action="/action_page.php"></form>
            </div>
        </div>
        <div class="col-lg-4 col-md-16 col-sm-12">
            <div class="d-flex">
                <div>
                    <form action="/action_page.php">
                        <label for="birthday" class="text-dark">From :</label>
                        <input type="date" onchange="SearchData();" class="form-control" id="FromDate" name="birthday">
                    </form>
                </div>
                <div>
                    <form action="/action_page.php" class="ms-5">
                        <label for="birthday" class="text-dark">To :</label>
                        <input type="date" onchange="SearchData();" class="form-control" id="ToDate" name="birthday">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <table class="table table-striped table-hover table-small-font table-tighten table-bordered" id="example">
            <thead>
                <tr id="tableheader">
                    <th class="align-middle text-center text-dark" style="border: hidden;">Sr.</th>
                    <th class="align-middle text-center text-dark" style="border: hidden;">Roll No.</th>
                    <th class="align-middle text-center text-dark" style="border: hidden;">Student</th>
                    <th class="align-middle text-center text-dark" style="border: hidden;">Paid</th>
                    <th class="align-middle text-center text-dark" id="FeeDecidedColumnHeader" style="border: hidden;">Decided</th>
                    <th class="align-middle text-center text-dark" style="border: hidden;">Class/Section</th>
                    <th class="align-middle text-center text-dark" style="border: hidden;">Month/Year</th>
                    <th class="align-middle text-center text-dark" style="border: hidden;">CollectedBy.</th>
                    <th class="align-middle text-center text-dark" style="border: hidden;">Collected On</th>
                </tr>
            </thead>
            <tbody id="tbody" class="border">
            </tbody>
        </table>
    </div>
</div>

<style>
    .input-group-append {
        cursor: pointer;
    }
</style>

<script src="~/views/fees/checkfees.js"></script>
